<%- include('./../_partials/header') %>
  <div class="UserRec"> 
    <div>
        Add to your list: <%= newList.title %> <br>
        (id = <%= newList._id %>)
    </div>
    <div class="buttons">
    <form style="display:inline" action="/myrecs/new" method="get">  
    <button class="button hollow button">New Search</button>
    </form>
    <form style:"display:inline" action="/myrecs" method="POST">
    <button class="button hollow button">Submit</button><br>
    </form>
  </div>
  <div class="SpecRec">
    <form style:"display:inline" action="/myrecs" method="POST">
        <% records.results.forEach(function (record) { %>
          <div class="albums">
            <input type="checkbox" name="id" value="<%= record.id %>">
            <a href="https://www.discogs.com<%= record.uri %>"><img src="<%= record.thumb %>"></a>
            <br>
            <%= record.title %>
            <br><br>
          </div>
        <% }) %>
      </form>
      
  </div>   
</body>
</html>
